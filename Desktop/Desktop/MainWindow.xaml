<Window
    x:Class="AdactaInternational.AdactaReportsShoppingBag.Desktop.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:model="using:AdactaInternational.AdactaReportsShoppingBag.Model.Soap.Response"
    mc:Ignorable="d"
    Title="AdactaReports Shopping Bag"
    Closed="MainWindow_Closed">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel x:Name="TitleBar" Grid.Row="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
            <Image x:Name="TitleBarIcon"
                   HorizontalAlignment="Left"
                   Width="18" Height="18"
                   Margin="8,0,0,0" />

            <TextBlock FontSize="12">
                <Run Text="{x:Bind ViewModel.ReportProject.ProjectCode, Mode=OneWay, FallbackValue=''}" />
                <Run Text="{x:Bind ViewModel.ReportProject.ProjectName, Mode=OneWay, FallbackValue=''}" />
                <Run Text="{x:Bind ViewModel.SaveStateText, Mode=OneWay}" />
            </TextBlock>
        </StackPanel>

        <muxc:MenuBar Grid.Row="1">
            <muxc:MenuBarItem Title="Progetto">
                <MenuFlyoutItem Text="Nuovo" Icon="Add" Command="{x:Bind ViewModel.NewProjectCommand}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="N" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Apri" Icon="OpenLocal" Command="{x:Bind ViewModel.OpenProjectCommand}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="A" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator Visibility="{x:Bind ViewModel.SaveButtonVisibility, Mode=OneWay}" />
                <MenuFlyoutItem Text="Salva" Icon="Save" Command="{x:Bind ViewModel.SaveProjectCommand}"
                                Visibility="{x:Bind ViewModel.SaveButtonVisibility, Mode=OneWay}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>

            <muxc:MenuBarItem Title="Elaborazione" Visibility="{x:Bind ViewModel.SurveyMenuItemVisibility, Mode=OneWay}">
                <MenuFlyoutItem Text="Importa file input" Icon="Import" Command="{x:Bind ViewModel.ImportInputFileCommand}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="I" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Apri file classi domande" Icon="Document" Command="{x:Bind ViewModel.OpenClassesFileCommand}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="C" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator />
                <MenuFlyoutItem Text="Elabora" Icon="SlideShow">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="E" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>

            <muxc:MenuBarItem Title="Aiuto">
                <MenuFlyoutItem Text="Informazioni" Icon="Help" Command="{x:Bind ViewModel.OpenInfoCommand}">
                    <MenuFlyoutItem.KeyboardAccelerators>
                        <KeyboardAccelerator Key="I" Modifiers="Control" />
                    </MenuFlyoutItem.KeyboardAccelerators>
                </MenuFlyoutItem>
            </muxc:MenuBarItem>
        </muxc:MenuBar>

        <NavigationView Grid.Row="2"
                        IsPaneToggleButtonVisible="False"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left"
                        Loaded="NavigationView_Loaded"
                        MenuItemsSource="{x:Bind ViewModel.NavigationViewMenuItems, Mode=OneWay}"
                        SelectionChanged="NavigationView_SelectionChanged">
            <NavigationView.MenuItemTemplate>
                <DataTemplate x:DataType="model:Product">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <Button Click="Button_Click" Tag="{x:Bind Mode=OneWay}">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{x:Bind NavigationMenuItemIcon, Mode=OneWay}"/>
                        </Button>
                        <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </NavigationView.MenuItemTemplate>
            <Grid>
                <Image Source="/Assets/LogoDarkTheme.png" Stretch="Uniform" Opacity="0.02" />
                <Frame x:Name="RootFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Window>