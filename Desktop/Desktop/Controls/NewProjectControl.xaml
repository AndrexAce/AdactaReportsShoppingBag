<UserControl
    x:Class="AdactaInternational.AdactaReportsShoppingBag.Desktop.Controls.NewProjectControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AdactaInternational.AdactaReportsShoppingBag.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical" Spacing="12">

        <StackPanel Orientation="Vertical" Spacing="4">
            <TextBox Header="Codice progetto" 
                     Text="{x:Bind _viewModel.ProjectCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="es: 12.345A" />
            <TextBlock Text="{x:Bind _viewModel.ProjectCodeError, Mode=OneWay}" 
                       Visibility="{x:Bind _viewModel.ProjectCodeErrorVisibility, Mode=OneWay}"
                       Foreground="Red" />
        </StackPanel>

        <TextBox Header="Nome progetto" 
                 Text="{x:Bind _viewModel.ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{x:Bind _viewModel.ProjectNameError, Mode=OneWay}"
                   Visibility="{x:Bind _viewModel.ProjectCodeErrorVisibility, Mode=OneWay}"
                   Foreground="Red" />
    </StackPanel>
</UserControl>
